<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.myapp.mapper.QNACommentMapper">

  <insert id="insert">
    <selectKey keyProperty="commentNo" order="AFTER" resultType="int">
      SELECT ISEQ$$_74649.CURRVAL FROM dual
    </selectKey>

    insert into tbl_QNAComment (content, nickName, postNo)
    values(#{content}, #{nickName}, #{postNo})
  </insert>

  <select id="select" resultType="org.zerock.myapp.domain.QNACommentVO">
        SELECT * 
        FROM tbl_QNAComment 
        WHERE postno = #{postNo}
  </select>

  <delete id="deletecomment">
    DELETE FROM tbl_QNAComment WHERE commentno = #{commentNo}
  </delete>

<update id="update">
        UPDATE tbl_QNAComment 
        SET 
        NICKNAME=#{nickname},
        content=#{content}, 
        MODFIYDATE = current_date
        WHERE commentNo = #{commentNo}
    </update>

</mapper>
